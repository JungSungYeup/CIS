<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ListView
            android:id="@+id/forum_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/forum_ll"
            android:textFilterEnabled="true"
            android:dividerHeight="5dp"
            android:divider="@color/Acolor"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/forum_ll">

            <EditText
                android:id="@+id/search2_et"
                android:layout_width="150dp"
                android:layout_height="50dp"
                />

            <ImageButton
                android:id="@+id/search2_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_search"
                android:background="@drawable/background2"
                />
        </LinearLayout>

        <Button
            android:id="@+id/search2_write"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/background2"
            android:textColor="@color/Acolor"
            android:text="글쓰기" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/hide_nickname"
            />
    </RelativeLayout>

</FrameLayout>