<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/seoul_main_image"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Culture In Seoul"
            android:textColor="@color/Acolor"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울의 문화·행사 찾기"
            android:textColor="@color/Acolor"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
<ImageView
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="191dp"
    android:layout_toStartOf="@+id/et_login_id"
    android:background="@drawable/if_header" />

    <EditText
        android:id="@+id/et_login_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_login_pw"
        android:layout_centerHorizontal="true"
        android:hint="아이디를 입력하세요."
        android:textColor="@color/Acolor"
        android:textColorHint="@color/Acolor" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="147dp"
        android:layout_toStartOf="@+id/et_login_pw"
        android:background="@drawable/if_key_172487" />

    <EditText
        android:id="@+id/et_login_pw"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_member_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:hint="비밀번호를 입력하세요."
        android:inputType="textPassword"
        android:textColor="@color/Acolor"
        android:textColorHint="@color/Acolor" />


    <Button
        android:id="@+id/btn_member_login"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="87dp"
        android:background="@drawable/d_day_text_background"
        android:text="Login"
        android:textColor="@color/Acolor" />

    <Button
        android:id="@+id/btn_member_join"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:background="@drawable/noback"
        android:text="회원가입"
        android:textColor="@color/Acolor" />


    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />


</RelativeLayout>